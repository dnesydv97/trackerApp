{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "noEmit": true,
    "paths": {
      // "@shared/web": ["./index"]
      "*":["../../packages/web/node_modules/*"]
    }
  },
  "exclude": [
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
